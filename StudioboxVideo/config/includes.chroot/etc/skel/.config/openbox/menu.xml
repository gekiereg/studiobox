<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
	<menu id="root-menu" label="Openbox 3">
		<separator label=".:: StudioBox ::."/>
		<item label="Documentation">
			<action name="Execute">
				<execute>pcmanfm &quot;/home/sbvideo/Documents&quot;</execute>
			</action>
		</item>
		<item label="Musique">
			<action name="Execute">
				<execute>pcmanfm &quot;/home/sbvideo/Musique&quot;</execute>
			</action>
		</item>
		<separator/>
		<menu id="multim" label="Lecteurs multimedia">
			<item label="Mplayer">
				<action name="Execute">
					<execute>
						smplayer
					</execute>
				</action>
			</item>
			<item label="Vlc">
				<action name="Execute">
					<execute>
						vlc
					</execute>
				</action>
			</item>
			<item label="Gxine">
				<action name="Execute">
					<execute>
						gxine
					</execute>
				</action>
			</item>
		</menu>
		<menu id="root-menu-504920" label="Montage vidéo">
			<item label="KdenLive">
				<action name="Execute">
					<execute>kdenlive</execute>
				</action>
			</item>
			<item label="OpenShot">
				<action name="Execute">
					<execute>openshot</execute>
				</action>
			</item>
			<item label="Pitivi">
				<action name="Execute">
					<execute>pitivi</execute>
				</action>
			</item>
		</menu>
		<menu id="root-menu-841711" label="Outils montage son">
			<item label="Audacity">
				<action name="Execute">
					<execute>audacity</execute>
				</action>
			</item>
			<menu id="root-menu-491730" label="Convertisseurs audio-vidéo">
				<item label="Arista">
					<action name="Execute">
						<execute>
						arista-gtk
						</execute>
					</action>
				</item>
				<item label="Sound Converter">
					<action name="Execute">
						<execute>
						soundconverter
						</execute>
					</action>
				</item>
			<item label="Phatch">
				<action name="Execute">
					<execute>phatch</execute>
				</action>
			</item>
			</menu>
		</menu>
		<menu id="root-menu-505920" label="Outils multimédia">
			<item label="ffDiaporama">
				<action name="Execute">
					<execute>ffdiaporama</execute>
				</action>
			</item>
			<item label="Imagination">
				<action name="Execute">
					<execute>imagination</execute>
				</action>
			</item>
			<item label="Devede">
				<action name="Execute">
					<execute>devede</execute>
				</action>
			</item>
			<item label="LiVes">
				<action name="Execute">
					<execute>lives</execute>
				</action>
			</item>
		</menu>

		<separator/>
		<item label="Navigateur Web">
			<action name="Execute">
				<execute>
					iceweasel http://www.education-aux-medias.ac-versailles.fr/
				</execute>
			</action>
		</item>
		<item label="Terminal">
			<action name="Execute">
				<execute>
					lxterminal
				</execute>
			</action>
		</item>
		<separator/>
		<item label="Déconnecter">
			<action name="Execute">
				<prompt>
					Déconnecter maintenant ?
				</prompt>
				<execute>
					killall openbox
				</execute>
			</action>
		</item>
		<item label="Redémarrer">
			<action name="Execute">
				<prompt>
					Redémarrer maintenant ?
				</prompt>
				<execute>sudo /sbin/shutdown -r now</execute>
			</action>
		</item>
		<item label="Éteindre">
			<action name="Execute">
				<prompt>
					Éteindre maintenant ?
				</prompt>
				<execute>sudo /sbin/shutdown -h now</execute>
			</action>
		</item>
	</menu>
</openbox_menu>
