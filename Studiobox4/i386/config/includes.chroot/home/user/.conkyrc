conky.config = {
use_xft = true,
xftfont = 'Sans:size=8',
xftalpha = 0.8,
text_buffer_size = 2048,
font = 'Sans:size=8',
-- Update interval in seconds
update_interval = 1,

-- This is the number of times Conky will update before quitting.
-- Set to zero to run forever.
total_run_times = 0,

-- Create own window instead of using desktop (required in nautilus)
    own_window = true,
    own_window_transparent = true,
    own_window_type = "override",
    own_window_hints ="undecorated,sticky,skip_taskbar,skip_pager",

-- Use double buffering (reduces flicker, may not work for everyone)
double_buffer = true,



-- Maximum width of text area
maximum_width = 200,

-- Draw shades?
draw_shades = false,

-- Draw outlines?
draw_outline = false,

-- Draw borders around text and graphs
draw_borders = false,
draw_graph_borders = false,

-- Stippled borders?
stippled_borders = 0,

-- border margins
-- A voir
-- window.border_inner_margin = 5,

-- border width
border_width = 0,

-- Default colors and also border colors
--default_color F0EBE2
default_color = "BBBBBB",
own_window_colour = "000000",

-- Text alignment, other possible values are commented
alignment = "top_right",
--alignment = "bottom_right",

-- Gap between borders of screen and text
-- same thing as passing -x at command line
gap_x = 8,
gap_y = 2,

-- Subtract file system buffers from used memory?
false_buffers = true,

-- set to true if you want all text to be in uppercase
uppercase = false,

-- number of cpu samples to average
-- set to 1 to disable averaging
cpu_avg_samples = 2,

-- number of net samples to average
-- set to 1 to disable averaging
net_avg_samples = 2,

-- Force UTF8? note that UTF8 support required XFT
override_utf8_locale = true,

-- Add spaces to keep things from moving about?  This only affects certain objects.
use_spacer="none"
}

conky.text=[[
${alignc}StudioBox v4
${hr}
${font Sans:size=10,weight:normal}${alignc}${time %a %d %b %Y}${font}
${font Sans:size=10,weight:bold}${alignc}${time %H:%M}${font}
${hr}
Kernel : ${alignr}${color D20001}${kernel}${color}
Uptime : ${alignr}${color D20001}${uptime}${color}
${hr}${color}
Freq & Temp CPU : ${alignr}${color D20001}${freq_g}GHz${color} - ${color D20001}${acpitemp}°C${color}
${alignc}${cpugraph 6,200 F0EBE2 D20001}
CPU : ${alignr}${color D20001}${cpu cpu0}%${color} ${cpugauge cpu0 10,25}
RAM : ${alignr}${color D20001}${mem} - ${memperc}%${color} ${memgauge 10,25}
Swap : ${alignr}${color D20001}${swap} - ${swapperc}%${color} ${swapbar 6,25}
${hr}
Process ${goto 145}MEM${alignr}CPU
${color D20001}${top name 1} ${goto 140}${top mem 1}${alignr}${top cpu 1}
${top name 2} ${goto 140}${top mem 2}${alignr}${top cpu 2}
${top name 3} ${goto 140}${top mem 3}${alignr}${top cpu 3}
${top name 4} ${goto 140}${top mem 4}${alignr}${top cpu 4}
${top name 5} ${goto 140}${top mem 5}${alignr}${top cpu 5}${color}


${font Sans:size=10,weight:bold}Réseau${font} ${hr 2}
${if_existing /proc/net/route wlan0}${alignc}WiFi
Signal: ${alignr}${color D20001}${wireless_link_qual wlan0}%${color} ${wireless_link_bar 6,25 wlan0}
IP locale : ${alignr}${color D20001}${addr wlan0}${color}
DL ${color D20001}${downspeedf wlan0}KiB/s${color} ${alignr}${color D20001}${upspeedf wlan0}KiB/s${color} UL${endif}
${if_existing /proc/net/route eth0}
${alignc}Ethernet
IP locale : ${alignr}${color D20001}${addr eth0}${color}
DL ${color D20001}${downspeedf eth0}KiB/s${color} ${alignr}${color D20001}${upspeedf eth0}KiB/s${color} UL
${endif}
${hr}
IP publique : ${alignr}${color D20001}${execi 600 ~/Scripts/mon-ip}${color}
]]
